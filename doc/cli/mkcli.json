{
  "description": "Markdown command line interface definition.",
  "type": "program",
  "name": "mkcli",
  "synopsis": [
    "[options]"
  ],
  "options": {
    "package": {
      "key": "package",
      "description": "Use package descriptor",
      "names": [
        "-p",
        "--package"
      ],
      "type": "option",
      "extra": "=[FILE]",
      "required": false,
      "multiple": false
    },
    "type": {
      "key": "type",
      "description": "Output renderer type",
      "names": [
        "-t",
        "--type"
      ],
      "type": "option",
      "extra": "=[TYPE]",
      "required": false,
      "multiple": false
    },
    "help": {
      "key": "help",
      "description": "Display help and exit",
      "names": [
        "-h",
        "--help"
      ],
      "type": "flag"
    },
    "version": {
      "key": "version",
      "description": "Print the version and exit",
      "names": [
        "--version"
      ],
      "type": "flag"
    }
  }
}
