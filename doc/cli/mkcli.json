{
  "description": "Compiles markdown command line interface definitions to JSON and supplies renderers for converting the definitions to help files and man pages.",
  "names": [
    "mkcli"
  ],
  "type": "program",
  "name": "mkcli",
  "summary": "compiles markdown cli definitions",
  "synopsis": [
    "[options]"
  ],
  "options": {
    "package": {
      "key": "package",
      "description": "Use package descriptor",
      "names": [
        "-p",
        "--package"
      ],
      "type": "option",
      "extra": "=[FILE]",
      "required": false,
      "multiple": false
    },
    "type": {
      "key": "type",
      "description": "Output renderer type",
      "names": [
        "-t",
        "--type"
      ],
      "type": "option",
      "extra": "=[TYPE]",
      "required": false,
      "multiple": false,
      "kind": [
        "json",
        "help",
        "man"
      ]
    },
    "style": {
      "key": "style",
      "description": "Help output style",
      "names": [
        "-y",
        "--style"
      ],
      "type": "option",
      "extra": "=[VAL]",
      "required": false,
      "multiple": false,
      "kind": [
        "col",
        "list",
        "cmd",
        "usage"
      ]
    },
    "cols": {
      "key": "cols",
      "description": "Wrap help output at NUM",
      "names": [
        "-c",
        "--cols"
      ],
      "type": "option",
      "extra": "=[NUM]",
      "required": false,
      "multiple": false,
      "value": "80"
    },
    "split": {
      "key": "split",
      "description": "Split help columns at NUM",
      "names": [
        "-s",
        "--split"
      ],
      "type": "option",
      "extra": "=[NUM]",
      "required": false,
      "multiple": false,
      "value": "26"
    },
    "desc": {
      "key": "desc",
      "description": "Number of description paragraphs for help output",
      "names": [
        "-d",
        "--desc"
      ],
      "type": "option",
      "extra": "=[NUM]",
      "required": false,
      "multiple": false
    },
    "indent": {
      "key": "indent",
      "description": "Number of spaces for help indentation",
      "names": [
        "-i",
        "--indent"
      ],
      "type": "option",
      "extra": "=[NUM]",
      "required": false,
      "multiple": false,
      "value": "2"
    },
    "align": {
      "key": "align",
      "description": "Alignment of first help column",
      "names": [
        "-a",
        "--align"
      ],
      "type": "option",
      "extra": "=[TYPE]",
      "required": false,
      "multiple": false,
      "kind": [
        "left",
        "right"
      ]
    },
    "usage": {
      "key": "usage",
      "description": "Set usage message for help synopsis",
      "names": [
        "-u",
        "--usage"
      ],
      "type": "option",
      "extra": "=[VAL]",
      "required": false,
      "multiple": false,
      "value": "Usage:"
    },
    "colon": {
      "key": "colon",
      "description": "Append a colon to headings in help output",
      "names": [
        "-C",
        "--colon"
      ],
      "type": "flag"
    },
    "section": {
      "key": "section",
      "description": "Include sections matching patterns in help output",
      "names": [
        "-S",
        "--section"
      ],
      "type": "option",
      "extra": "=[PTN...]",
      "required": false,
      "multiple": true
    },
    "header": {
      "key": "header",
      "description": "Include default header in help output",
      "names": [
        "-H",
        "--header"
      ],
      "type": "flag"
    },
    "footer": {
      "key": "footer",
      "description": "Include default footer in help output",
      "names": [
        "-F",
        "--footer"
      ],
      "type": "flag"
    },
    "newline": {
      "key": "newline",
      "description": "Print leading newline when no header",
      "names": [
        "-N",
        "--newline"
      ],
      "type": "flag"
    },
    "preserve": {
      "key": "preserve",
      "description": "Do not upper case headings in man output",
      "names": [
        "-P",
        "--preserve"
      ],
      "type": "flag"
    },
    "full": {
      "key": "full",
      "description": "Do not compact compiled descriptor",
      "names": [
        "-f",
        "--full"
      ],
      "type": "flag"
    },
    "help": {
      "key": "help",
      "description": "Display help and exit",
      "names": [
        "-h",
        "--help"
      ],
      "type": "flag"
    },
    "version": {
      "key": "version",
      "description": "Print the version and exit",
      "names": [
        "--version"
      ],
      "type": "flag"
    }
  }
}
