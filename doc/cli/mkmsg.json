{
  "description": "Message injection.",
  "type": "program",
  "name": "mkmsg",
  "synopsis": "[options]",
  "options": {
    "message": {
      "literal": "-m, --message=[MSG]",
      "key": "message",
      "description": "Custom message, parsed as markdown",
      "names": [
        "-m",
        "--message"
      ],
      "type": "option",
      "extra": "=[MSG]",
      "required": false,
      "multiple": false
    },
    "prepend": {
      "literal": "-p, --prepend",
      "key": "prepend",
      "description": "Prepend message to the stream",
      "names": [
        "-p",
        "--prepend"
      ],
      "type": "flag"
    },
    "help": {
      "literal": "-h, --help",
      "key": "help",
      "description": "Display help and exit",
      "names": [
        "-h",
        "--help"
      ],
      "type": "flag"
    },
    "version": {
      "literal": "--version",
      "key": "version",
      "description": "Print the version and exit",
      "names": [
        "--version"
      ],
      "type": "flag"
    }
  }
}