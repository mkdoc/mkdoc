{
  "names": [
    "mkpi"
  ],
  "type": "program",
  "name": "mkpi",
  "summary": "processing instruction macros",
  "synopsis": [
    "[options]"
  ],
  "options": {
    "safe": {
      "key": "safe",
      "description": "Disable the @exec and @macro directives",
      "names": [
        "-s",
        "--safe"
      ],
      "type": "flag"
    },
    "preserve": {
      "key": "preserve",
      "description": "Do not remove processing instructions",
      "names": [
        "-p",
        "--preserve"
      ],
      "type": "flag"
    },
    "help": {
      "key": "help",
      "description": "Display help and exit",
      "names": [
        "-h",
        "--help"
      ],
      "type": "flag"
    },
    "version": {
      "key": "version",
      "description": "Print the version and exit",
      "names": [
        "--version"
      ],
      "type": "flag"
    }
  }
}
