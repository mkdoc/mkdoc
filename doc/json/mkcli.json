{
  "description": "Compiles markdown command line interface definitions to JSON and supplies renderers for converting the definitions to help files and man pages. If no files are given input from stdin is expected.\n\nIf an input file is a directory then the directory is scanned for files ending in md or markdown.\n\nWhen files are given and no type is specified all types are created otherwise when reading from stdin the json output type is assumed.\n\nOutput files are overwritten if they already exist.",
  "names": [
    "mkcli"
  ],
  "type": "program",
  "name": "mkcli",
  "summary": "compiles markdown cli definitions",
  "synopsis": [
    "[options] [files...]"
  ],
  "options": {
    "recursive": {
      "key": "recursive",
      "description": "Recursively load command definitions",
      "names": [
        "-r",
        "--recursive"
      ],
      "type": "flag"
    },
    "package": {
      "key": "package",
      "description": "Use package descriptor",
      "names": [
        "-p",
        "--package"
      ],
      "type": "option",
      "extra": "=[FILE]",
      "required": false,
      "multiple": false
    },
    "type": {
      "key": "type",
      "description": "Output renderer type",
      "names": [
        "-t",
        "--type"
      ],
      "type": "option",
      "extra": "=[TYPE]",
      "required": false,
      "multiple": false,
      "kind": [
        "json",
        "help",
        "man"
      ]
    },
    "style": {
      "key": "style",
      "description": "Help output style",
      "names": [
        "-y",
        "--style"
      ],
      "type": "option",
      "extra": "=[VAL]",
      "required": false,
      "multiple": false,
      "kind": [
        "col",
        "list",
        "cmd",
        "usage"
      ]
    },
    "cols": {
      "key": "cols",
      "description": "Wrap help output at NUM",
      "names": [
        "-c",
        "--cols"
      ],
      "type": "option",
      "extra": "=[NUM]",
      "required": false,
      "multiple": false,
      "value": "80"
    },
    "split": {
      "key": "split",
      "description": "Split help columns at NUM",
      "names": [
        "-s",
        "--split"
      ],
      "type": "option",
      "extra": "=[NUM]",
      "required": false,
      "multiple": false,
      "value": "26"
    },
    "desc": {
      "key": "desc",
      "description": "Number of description paragraphs for help output",
      "names": [
        "-d",
        "--desc"
      ],
      "type": "option",
      "extra": "=[NUM]",
      "required": false,
      "multiple": false
    },
    "indent": {
      "key": "indent",
      "description": "Number of spaces for help indentation",
      "names": [
        "-i",
        "--indent"
      ],
      "type": "option",
      "extra": "=[NUM]",
      "required": false,
      "multiple": false,
      "value": "2"
    },
    "align": {
      "key": "align",
      "description": "Alignment of first help column",
      "names": [
        "-a",
        "--align"
      ],
      "type": "option",
      "extra": "=[TYPE]",
      "required": false,
      "multiple": false,
      "kind": [
        "left",
        "right"
      ]
    },
    "usage": {
      "key": "usage",
      "description": "Set usage message for help synopsis",
      "names": [
        "-u",
        "--usage"
      ],
      "type": "option",
      "extra": "=[VAL]",
      "required": false,
      "multiple": false,
      "value": "Usage:"
    },
    "full": {
      "key": "full",
      "description": "Do not compact compiled descriptor",
      "names": [
        "-f",
        "--full"
      ],
      "type": "flag"
    },
    "colon": {
      "key": "colon",
      "description": "Append a colon to headings in help output",
      "names": [
        "-C",
        "--colon"
      ],
      "type": "flag"
    },
    "section": {
      "key": "section",
      "description": "Include sections matching patterns in help output",
      "names": [
        "-S",
        "--section"
      ],
      "type": "option",
      "extra": "=[PTN...]",
      "required": false,
      "multiple": true
    },
    "header": {
      "key": "header",
      "description": "Include default header in help output",
      "names": [
        "-H",
        "--header"
      ],
      "type": "flag"
    },
    "footer": {
      "key": "footer",
      "description": "Include default footer in help output",
      "names": [
        "-F",
        "--footer"
      ],
      "type": "flag"
    },
    "newline": {
      "key": "newline",
      "description": "Print leading newline when no header",
      "names": [
        "-N",
        "--newline"
      ],
      "type": "flag"
    },
    "preserve": {
      "key": "preserve",
      "description": "Do not upper case headings in man output",
      "names": [
        "-P",
        "--preserve"
      ],
      "type": "flag"
    },
    "json": {
      "key": "json",
      "description": "Set output directory for json files",
      "names": [
        "-J",
        "--json"
      ],
      "type": "option",
      "extra": "=[DIR]",
      "required": false,
      "multiple": false
    },
    "text": {
      "key": "text",
      "description": "Set output directory for help text files",
      "names": [
        "-T",
        "--text"
      ],
      "type": "option",
      "extra": "=[DIR]",
      "required": false,
      "multiple": false
    },
    "man": {
      "key": "man",
      "description": "Set output directory for man pages",
      "names": [
        "-M",
        "--man"
      ],
      "type": "option",
      "extra": "=[DIR]",
      "required": false,
      "multiple": false
    },
    "zsh": {
      "key": "zsh",
      "description": "Set output directory for zsh completion",
      "names": [
        "-Z",
        "--zsh"
      ],
      "type": "option",
      "extra": "=[DIR]",
      "required": false,
      "multiple": false
    },
    "dir": {
      "key": "dir",
      "description": "Set output directory for all types",
      "names": [
        "-o",
        "--output"
      ],
      "type": "option",
      "extra": "=[DIR]",
      "required": false,
      "multiple": false
    },
    "help": {
      "key": "help",
      "description": "Display help and exit",
      "names": [
        "-h",
        "--help"
      ],
      "type": "flag"
    },
    "version": {
      "key": "version",
      "description": "Print the version and exit",
      "names": [
        "-v",
        "--version"
      ],
      "type": "flag"
    }
  }
}
