{
  "names": [
    "mkpage"
  ],
  "type": "program",
  "name": "mkpage",
  "summary": "convert a document to an HTML page",
  "synopsis": [
    "[options]"
  ],
  "options": {
    "output": {
      "key": "output",
      "description": "Write output to FILE",
      "names": [
        "-o",
        "--output"
      ],
      "type": "option",
      "extra": "=[FILE]",
      "required": false,
      "multiple": false,
      "value": "stdout",
      "name": "--output"
    },
    "doctype": {
      "key": "doctype",
      "description": "Doctype declaration",
      "names": [
        "-d",
        "--doctype"
      ],
      "type": "option",
      "extra": "=[VAL]",
      "required": false,
      "multiple": false,
      "value": "<!doctype html>",
      "name": "--doctype"
    },
    "charset": {
      "key": "charset",
      "description": "Document charset",
      "names": [
        "-r",
        "--charset"
      ],
      "type": "option",
      "extra": "=[VAL]",
      "required": false,
      "multiple": false,
      "value": "utf-8",
      "name": "--charset"
    },
    "lang": {
      "key": "lang",
      "description": "Language attribute",
      "names": [
        "-l",
        "--lang"
      ],
      "type": "option",
      "extra": "=[VAL]",
      "required": false,
      "multiple": false,
      "value": "en-us",
      "name": "--lang"
    },
    "title": {
      "key": "title",
      "description": "Document title",
      "names": [
        "-t",
        "--title"
      ],
      "type": "option",
      "extra": "=[VAL]",
      "required": false,
      "multiple": false,
      "name": "--title"
    },
    "style": {
      "key": "style",
      "description": "Paths for link elements",
      "names": [
        "-s",
        "--style"
      ],
      "type": "option",
      "extra": "=[PATH...]",
      "required": false,
      "multiple": true,
      "name": "--style"
    },
    "script": {
      "key": "script",
      "description": "Paths for script elements",
      "names": [
        "-S",
        "--script"
      ],
      "type": "option",
      "extra": "=[PATH...]",
      "required": false,
      "multiple": true,
      "name": "--script"
    },
    "css": {
      "key": "css",
      "description": "Create css element from FILE",
      "names": [
        "-c",
        "--css"
      ],
      "type": "option",
      "extra": "=[FILE]",
      "required": false,
      "multiple": false,
      "zaction": ":file:_files -g '*.css'",
      "name": "--css"
    },
    "javascript": {
      "key": "javascript",
      "description": "Create script element from FILE",
      "names": [
        "-j",
        "--javascript"
      ],
      "type": "option",
      "extra": "=[FILE]",
      "required": false,
      "multiple": false,
      "zaction": ":file:_files -g '*.js'",
      "name": "--javascript"
    },
    "favicon": {
      "key": "favicon",
      "description": "Path to use for a favicon",
      "names": [
        "-f",
        "--favicon"
      ],
      "type": "option",
      "extra": "=[PATH]",
      "required": false,
      "multiple": false,
      "name": "--favicon"
    },
    "html[ATTR]": {
      "key": "html[ATTR]",
      "description": "Set attributes on the html element",
      "names": [
        "--html-[ATTR]"
      ],
      "type": "option",
      "extra": "=[VAL...]",
      "required": false,
      "multiple": true,
      "name": "--html-[ATTR]"
    },
    "meta[NAME]": {
      "key": "meta[NAME]",
      "description": "Set meta data in document head",
      "names": [
        "--meta-[NAME]"
      ],
      "type": "option",
      "extra": "=[DESC...]",
      "required": false,
      "multiple": true,
      "name": "--meta-[NAME]"
    },
    "body[ATTR]": {
      "key": "body[ATTR]",
      "description": "Set attributes on the body element",
      "names": [
        "--body-[ATTR]"
      ],
      "type": "option",
      "extra": "=[VAL...]",
      "required": false,
      "multiple": true,
      "name": "--body-[ATTR]"
    },
    "element": {
      "key": "element",
      "description": "Container element for the input document",
      "names": [
        "--element"
      ],
      "type": "option",
      "extra": "=[NAME]",
      "required": false,
      "multiple": false,
      "name": "--element"
    },
    "attr[NAME]": {
      "key": "attr[NAME]",
      "description": "Set attributes on container element",
      "names": [
        "--attr-[NAME]"
      ],
      "type": "option",
      "extra": "=[VAL...]",
      "required": false,
      "multiple": true,
      "name": "--attr-[NAME]"
    },
    "app": {
      "key": "app",
      "description": "Script elements before the end of the body",
      "names": [
        "--app"
      ],
      "type": "option",
      "extra": "=[PATH...]",
      "required": false,
      "multiple": true,
      "name": "--app"
    },
    "header": {
      "key": "header",
      "description": "Include file at start of document body",
      "names": [
        "--header"
      ],
      "type": "option",
      "extra": "=[FILE]",
      "required": false,
      "multiple": false,
      "name": "--header"
    },
    "footer": {
      "key": "footer",
      "description": "Include file at end of document body",
      "names": [
        "--footer"
      ],
      "type": "option",
      "extra": "=[FILE]",
      "required": false,
      "multiple": false,
      "name": "--footer"
    },
    "async": {
      "key": "async",
      "description": "Add async attribute to script elements",
      "names": [
        "--async"
      ],
      "type": "flag",
      "name": "--async"
    },
    "help": {
      "key": "help",
      "description": "Display help and exit",
      "names": [
        "-h",
        "--help"
      ],
      "type": "flag",
      "name": "--help"
    },
    "version": {
      "key": "version",
      "description": "Print the version and exit",
      "names": [
        "--version"
      ],
      "type": "flag",
      "name": "--version"
    }
  }
}
