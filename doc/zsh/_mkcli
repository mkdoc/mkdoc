#compdef mkcli
_arguments -C \
  '-p,--package=-[Use package descriptor]' \
  '-t,--type=-[Output renderer type]' \
  '-y,--style=-[Help output style]' \
  '-c,--cols=-[Wrap help output at NUM]' \
  '-s,--split=-[Split help columns at NUM]' \
  '-d,--desc=-[Number of description paragraphs for help output]' \
  '-i,--indent=-[Number of spaces for help indentation]' \
  '-a,--align=-[Alignment of first help column]' \
  '-u,--usage=-[Set usage message for help synopsis]' \
  '-f,--full[Do not compact compiled descriptor]' \
  '-r,--recursive[Recursively load command definitions]' \
  '-C,--colon[Append a colon to headings in help output]' \
  '-S,--section=-[Include sections matching patterns in help output]' \
  '-H,--header[Include default header in help output]' \
  '-F,--footer[Include default footer in help output]' \
  '-N,--newline[Print leading newline when no header]' \
  '-P,--preserve[Do not upper case headings in man output]' \
  '-J,--json=-[Set output directory for json files]' \
  '-T,--text=-[Set output directory for help text files]' \
  '-M,--man=-[Set output directory for man pages]' \
  '-Z,--zsh=-[Set output directory for zsh completion]' \
  '-o,--output=-[Set output directory for all types]' \
  '-h,--help[Display help and exit]' \
  '-v,--version[Print the version and exit]' \
  '*::arguments:_files' && return 0;
