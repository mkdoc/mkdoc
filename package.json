{
  "name": "mkdoc",
  "version": "1.0.3",
  "description": "Markdown processing tools",
  "author": "muji",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mkdoc/mkdoc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkdoc/mkdoc.git"
  },
  "keywords": [
    "markdown",
    "commonmark",
    "docs",
    "documentation",
    "comments",
    "api",
    "generator"
  ],
  "directories": {
    "bin": "./bin"
  },
  "dependencies": {
    "cli-argparse": "~1.1.1",
    "mkapi": "~1.1.3",
    "mkast": "~1.1.4",
    "mkcat": "~1.0.3",
    "mkgen": "~1.0.0",
    "mkout": "~1.0.0",
    "mkparse": "~1.5.0",
    "mkpi": "~1.0.1",
    "string-repeater": "~1.0.3"
  },
  "devDependencies": {
    "chai": "~3.5.0",
    "coveralls": "~2.11.8",
    "istanbul": "~0.4.2",
    "mocha": "~2.4.5"
  },
  "scripts": {
    "clean": "rm -rf coverage target",
    "docs": "npm run readme",
    "readme": "mkcat doc/readme.md | mkpi | mkgen | mkout > README.md",
    "lint": "jshint . && jscs .",
    "test": "NODE_env=test mocha ${SPEC:-test/spec}",
    "cover": "NODE_ENV=test istanbul cover _mocha -- ${SPEC:-test/spec}",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  }
}
